<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_header"
            android:background="@color/app_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:id="@+id/iv_close"
                android:src="@mipmap/white_cancel"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp" />
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Calling Numbers"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>
        <ListView
            android:id="@+id/lv_calls"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dip"
            android:layout_below="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
       <Button
           android:layout_below="@+id/lv_calls"
           android:id="@+id/btn_notcall"
           android:text="Call"
           android:background="@color/view_colour"
           android:textColor="@color/white"
           android:textAllCaps="false"
           android:textSize="@dimen/_14sdp"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_30sdp" />
        <Button
            android:layout_below="@+id/lv_calls"
            android:visibility="gone"
            android:id="@+id/btn_call"
            android:text="Call"
            android:background="@color/app_header"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp" />
    </RelativeLayout>
</RelativeLayout>