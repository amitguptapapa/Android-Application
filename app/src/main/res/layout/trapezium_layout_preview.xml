<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/app_header">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Trapezium"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:src="@mipmap/white_cancel" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/shapeBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@mipmap/trapezium_image">


            <!--<ImageView-->
            <!--android:id="@+id/ivPreviewImage"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_270sdp"-->
            <!--android:src="@mipmap/Square_image"/>-->


            <!--<EditText-->
            <!--android:id="@+id/editText5"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="36dp"-->
            <!--android:layout_marginStart="@dimen/_100sdp"-->
            <!--android:layout_marginLeft="@dimen/_130sdp"-->
            <!--android:layout_marginTop="62dp"-->
            <!--android:layout_marginEnd="176dp"-->
            <!--android:layout_marginRight="176dp"-->
            <!--android:layout_marginBottom="283dp"-->
            <!--android:background="@color/red"-->
            <!--android:ems="10"-->
            <!--android:inputType="textPersonName"-->
            <!--android:hint="Side A" />-->

            <EditText
                android:id="@+id/et_squareSideH"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_180sdp"
                android:hint="Side H"
                android:background="@color/white"
                android:textAlignment="center"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/et_squareSideA"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:ems="10"
                android:background="@color/white"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:hint="Side A" />

            <EditText
                android:id="@+id/et_squareSideC"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:ems="10"
                android:background="@color/white"
                android:textAlignment="center"
                android:hint="Side C"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/et_squareSideD"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_45sdp"
                android:background="@color/white"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:hint="Side D" />

            <EditText
                android:id="@+id/et_squareSideB"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@color/white"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:hint="Side B" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/greyLight" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/app_header"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</RelativeLayout>