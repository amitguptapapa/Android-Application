<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vis.android.Fragments.CaseDetail">
    <RelativeLayout
        android:id="@+id/h1"
        android:background="@color/app_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:src="@mipmap/back"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Case 1"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>
        <RelativeLayout
            android:id="@+id/rl_call"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/call"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp" />
        </RelativeLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_below="@+id/h1"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Owner Name:"
            android:textColor="@color/greyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_ownername"
            android:text="Mr.Rajkumar yadav"
            android:textColor="@color/greyy"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/et_ownername"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mobile"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mob"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Mobile Number:"
            android:textColor="@color/greyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_mobile"
            android:text="+91 7869594959"
            android:textColor="@color/greyy"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/tv_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/et_mobile"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rl_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_email"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Email id:"
            android:textColor="@color/greyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_email"
            android:text="rajkumar@gmail.com"
            android:textColor="@color/greyy"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/et_email"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Address:"
            android:textColor="@color/greyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_address"
            android:text="lorem ipsum is gooti near.Where tehy could bother the info the complain box.They boif jdjdj hitght jfjddj jdskkk jfddkjkjddjj."
            android:textColor="@color/greyy"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/et_address"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_casetype"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rl_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_casetype"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Case Type:"
            android:textColor="@color/greyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_casetype"
            android:text="vacant land"
            android:textColor="@color/greyy"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/tv_casetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/et_casetype"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rl_casetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Date:"
            android:textColor="@color/greyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et_date"
            android:text="28 Febrauary 2018"
            android:textColor="@color/greyy"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/et_date"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"></View>
    </RelativeLayout>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_40sdp">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_accept"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/accept"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_height="match_parent">
                <TextView
                    android:text="ACCEPT"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_reject"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/reject"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="REJECT"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
