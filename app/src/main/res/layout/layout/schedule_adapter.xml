<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:background="@mipmap/box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_name"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_owner"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:text="Mr. Rajkumar Yadav"
                android:layout_marginLeft="@dimen/_60sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_toRightOf="@+id/tv_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_below="@+id/rl_name"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_type"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time and Date :"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:text="7 March,18 at 2 PM"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_toRightOf="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_below="@+id/rl_type"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:text="Lorem Ipsum"
                android:layout_marginLeft="@dimen/_48sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_toRightOf="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rl_reschedule"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/rl_address"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:id="@+id/tv_reschedule"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/app_header"
                android:textSize="@dimen/_12sdp"
                android:text="Reschedule"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp" />
            <TextView
                android:id="@+id/tv_proceed"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/app_header"
                android:textSize="@dimen/_12sdp"
                android:text="Proceed"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>