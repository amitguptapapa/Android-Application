<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_180sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:background="@color/app_header"
            android:id="@+id/rr_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Upload Photo"
                android:id="@+id/tv_1"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_above="@+id/rr_cancel"
            android:layout_below="@+id/rr_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ll_camera">

               <!-- <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    app:srcCompat="@drawable/ic_camera_retro" />-->

                <TextView
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:id="@+id/tv_2"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"/>

            </LinearLayout>
<View
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="@dimen/_1sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ll_gallery">

                <!--<ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_gallery"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"/>-->

                <TextView
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textColor="@color/black"
                    android:id="@+id/tv_3"
                    android:textSize="@dimen/_16sdp"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_above="@+id/rr_cancel"
            android:background="@color/view_colour"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:id="@+id/rr_cancel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Cancel"
                android:id="@+id/tv_4"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>