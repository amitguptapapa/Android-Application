<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@mipmap/box2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/rl_name"
    android:paddingTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_owner"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurent :"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:text="Mr. Rajkumar Yadav"
        android:layout_marginLeft="@dimen/_30sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_toRightOf="@+id/tv_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_below="@+id/rl_name"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_type"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Type :"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:text="Vacant Land"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_toRightOf="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_below="@+id/rl_type"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:text="Lorem Ipsum"
                android:layout_marginLeft="@dimen/_48sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_toRightOf="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_below="@+id/rl_address"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_date"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:text="28 February 2018"
                android:layout_marginLeft="@dimen/_70sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_toRightOf="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>