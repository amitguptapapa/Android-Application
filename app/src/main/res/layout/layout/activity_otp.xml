<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/bg"
    tools:context="com.vis.android.Login.OTP">
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:src="@mipmap/back"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_logo"
        android:background="@mipmap/otp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />
    <TextView
        android:id="@+id/tv_login"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:text="@string/login_otp"
        android:layout_below="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_otp"
        android:background="@mipmap/text_box"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_below="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <EditText
            android:id="@+id/tv_mobile"
            android:hint="Enter otp"
            android:background="@null"
            android:inputType="number"
            android:textColorHint="@color/greyy"
            android:maxLength="10"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_timer"/>
        <TextView
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_timer"
            android:text="00:59"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_submit"
        android:background="@mipmap/button"
        android:text="SUBMIT"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_below="@+id/rl_otp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp" />
    <TextView
        android:id="@+id/resend_otp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Resend"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_below="@+id/btn_submit"
        android:textSize="@dimen/_14sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
