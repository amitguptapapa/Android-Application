<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
   android:layout_margin="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:id="@+id/tv_filterby"
            android:textSize="@dimen/_15sdp"
            android:text="Sort by"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp" />
        <ImageView
            android:src="@mipmap/filter_grey"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />
        <View
            android:layout_below="@+id/tv_filterby"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_3sdp"
        android:id="@+id/rl_range"
        android:layout_below="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:id="@+id/tv_range"
            android:text="Custom Range"
            android:background="@color/app_header"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
        <View
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@id/tv_range"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_today"
        android:layout_below="@+id/rl_range"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:text="Today"
            android:id="@+id/tv_today"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
        <View
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@id/tv_today"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yesterday"
        android:layout_below="@+id/rl_today"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:text="Yesterday"
            android:id="@+id/tv_yesterday"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
        <View
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@id/tv_yesterday"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_week"
        android:layout_below="@+id/rl_yesterday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:text="Week"
            android:id="@+id/tv_week"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
        <View
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@id/tv_week"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_month"
        android:layout_below="@+id/rl_week"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:text="This Month"
            android:id="@+id/tv_month"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
        <View
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@id/tv_month"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_year"
        android:layout_below="@+id/rl_month"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:text="Year"
            android:id="@+id/tv_year"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_submit"
        android:background="@color/app_header"
        android:layout_below="@+id/rl_year"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">
        <TextView
            android:textColor="@color/white"
            android:text="Submit"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>